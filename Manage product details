#include <stdio.h>

struct Product {
    int pid;
    char name[50];
    float price;
};

int main() {
    struct Product p;

    printf("Enter Product ID: ");
    scanf("%d", &p.pid);

    printf("Enter Product Name: ");
    scanf("%s", p.name);

    printf("Enter Price: ");
    scanf("%f", &p.price);

    printf("\n--- Product Details ---\n");
    printf("ID    : %d\n", p.pid);
    printf("Name  : %s\n", p.name);
    printf("Price : %.2f\n", p.price);

    return 0;
}
