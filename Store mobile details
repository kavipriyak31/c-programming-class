#include <stdio.h>

struct Mobile {
    char brand[50];
    char model[50];
    float price;
};

int main() {
    struct Mobile m;

    printf("Enter Brand: ");
    scanf("%s", m.brand);

    printf("Enter Model: ");
    scanf("%s", m.model);

    printf("Enter Price: ");
    scanf("%f", &m.price);

    printf("\n--- Mobile Details ---\n");
    printf("Brand : %s\n", m.brand);
    printf("Model : %s\n", m.model);
    printf("Price : %.2f\n", m.price);

    return 0;
}
